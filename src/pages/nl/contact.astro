---
import Layout from '../../layouts/Layout.astro';
import { MapPin, Phone, Mail, Info } from 'lucide-react';
---

<Layout title="Contact & Boeken | B&B De Tol" lang="nl">
  <div class="bg-green-900 text-white py-12 text-center">
    <h1 class="text-4xl font-serif font-bold">Contact & Boeken</h1>
    <p class="text-green-50 mt-2">Wij helpen u graag met uw reservering.</p>
  </div>

  <main class="max-w-5xl mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Details -->
      <div>
        <h2 class="text-2xl font-bold font-serif text-green-900 mb-6">Contactgegevens</h2>
        <div class="space-y-6 text-stone-700">
          <p class="flex items-start gap-4">
            <MapPin class="w-6 h-6 text-green-800 shrink-0 mt-1" />
            <span>
              <strong>B&B De Tol</strong><br/>
              Rapenburg 143<br/>
              4581 AC Vogelwaarde (Hulst)<br/>
              Nederland
            </span>
          </p>
          <p class="flex items-center gap-4">
              <Phone class="w-6 h-6 text-green-800 shrink-0" />
              <a href="tel:+31625077872" class="hover:text-green-800 transition">(+31) 06-25077872</a>
          </p>
          <p class="flex items-center gap-4">
              <Mail class="w-6 h-6 text-green-800 shrink-0" />
              <a href="mailto:info@bedandbreakfastdetol.nl" class="hover:text-green-800 transition">info@bedandbreakfastdetol.nl</a>
          </p>
        </div>

        <div class="mt-8 bg-stone-50 p-6 rounded-lg border border-stone-200 flex gap-4">
            <Info class="w-6 h-6 text-stone-400 shrink-0" />
            <div>
                <h3 class="font-bold mb-1">Parkeren & Check-in</h3>
                <p class="text-sm text-stone-600 mb-2">Er is gratis priv√©parkeergelegenheid beschikbaar bij de accommodatie.</p>
                <div class="bg-white inline-block px-3 py-1 rounded text-xs font-bold border border-stone-200 text-stone-500">
                    Check-in: in overleg
                </div>
            </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white p-8 rounded-xl shadow-lg border border-stone-100">
        <h2 class="text-2xl font-bold font-serif text-green-900 mb-6">Stuur een bericht</h2>
        <form class="space-y-4" name="contact" method="POST" data-netlify="true">
          <div>
            <label class="block text-sm font-bold text-stone-700 mb-1">Naam</label>
            <input type="text" name="naam" class="w-full px-4 py-2 rounded border border-stone-300 focus:border-green-800 focus:ring-1 focus:ring-green-800 outline-none" required />
          </div>
          <div>
            <label class="block text-sm font-bold text-stone-700 mb-1">E-mailadres</label>
            <input type="email" name="email" class="w-full px-4 py-2 rounded border border-stone-300 focus:border-green-800 focus:ring-1 focus:ring-green-800 outline-none" required />
          </div>
          <div>
             <label class="block text-sm font-bold text-stone-700 mb-1">Bericht / Reservering</label>
             <textarea name="bericht" class="w-full px-4 py-2 h-32 rounded border border-stone-300 focus:border-green-800 focus:ring-1 focus:ring-green-800 outline-none" required></textarea>
          </div>
          <button type="submit" class="w-full bg-green-800 text-white font-bold py-3 rounded-lg hover:bg-green-900 transition flex items-center justify-center gap-2">
            <Mail class="w-4 h-4" /> Verstuur Bericht
          </button>
        </form>
      </div>
    </div>

    <!-- Map Placeholder -->
    <div class="mt-16 h-96 w-full rounded-xl overflow-hidden shadow-md bg-stone-200 relative group">
        <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2487.892095944123!2d3.98939!3d51.3283!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c385ec5a8b7c7b%3A0x8e8b0b8b8b8b8b8b!2sRapenburg%20143%2C%204581%20AC%20Vogelwaarde!5e0!3m2!1snl!2snl!4v1634567890123!5m2!1snl!2snl" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            class="absolute inset-0 w-full h-full grayscale group-hover:grayscale-0 transition duration-700"
        ></iframe>
    </div>
  </main>
</Layout>
