---
import Layout from '../../layouts/Layout.astro';

// Images assigned to specific rooms (approximated based on description)
const roomImages = {
  inDeWei: "https://cf.bstatic.com/xdata/images/hotel/max1024x768/508066845.jpg?k=eb01be7d5b20dc521c6ff82fdfa163c4ad6c1aebc1bd1803b54050c81f51aeff&o=&hp=1",
  bijDeToren: "https://cf.bstatic.com/xdata/images/hotel/max1024x768/722515840.jpg?k=10e2da46f0fb32cb0fd955e59f185a0d6c42c95f33a5776aec5cccd137f63f25&o=&hp=1",
  hetTolhuis: "https://cf.bstatic.com/xdata/images/hotel/max1024x768/292475017.jpg?k=6dc5d50440dddd84e1e8dd3831a436a6d60a3205bfe0a818e86d59a1b5468e87&o=&hp=1"
};

const amenities = [
  "Free WiFi (9.5/10)",
  "Private bathroom with shower",
  "Coffee and tea facilities",
  "Flat-screen TV",
  "Fridge & Microwave",
  "Garden view",
  "Free parking"
];
---

<Layout title="Rooms | B&B De Tol" lang="en">
  <div class="bg-stone-900 text-white py-12 text-center">
    <h1 class="text-4xl font-serif font-bold">Our Rooms</h1>
    <p class="text-stone-300 mt-2">Spacious, atmospheric and fully equipped.</p>
  </div>

  <main class="max-w-6xl mx-auto px-4 py-12 space-y-12">
    <!-- Kamer 1: Grote Tweepersoonskamer -->
    <section class="flex flex-col md:flex-row gap-8 items-center bg-white p-6 rounded-xl shadow-sm border border-stone-100">
      <div class="md:w-1/2">
        <img src={roomImages.inDeWei} alt="Large Double Room" class="w-full h-80 object-cover rounded-lg" />
      </div>
      <div class="md:w-1/2">
        <div class="flex items-center gap-3 mb-2">
            <h2 class="text-3xl font-serif font-bold text-green-900">Large Double Room</h2>
            <span class="bg-stone-100 text-stone-600 text-xs font-bold px-2 py-1 rounded border border-stone-200">Ground Floor</span>
        </div>
        <p class="text-stone-600 mb-6 leading-relaxed">
          A spacious room of <strong>40 m²</strong> located on the ground floor with a beautiful view of the garden.
          Equipped with a seating area and a private bathroom with <strong>bathtub</strong> and shower.
        </p>
        <ul class="grid grid-cols-2 gap-y-2 gap-x-4 text-sm text-stone-700 mb-8">
            <li class="flex items-center font-bold">✓ 40 m² Space</li>
            <li class="flex items-center">✓ Garden view</li>
            <li class="flex items-center font-bold">✓ Bathtub & Shower</li>
            <li class="flex items-center">✓ Private terrace</li>
            <li class="flex items-center">✓ Fridge & Microwave</li>
            <li class="flex items-center">✓ Free WiFi</li>
        </ul>
        <div class="flex items-center gap-6 mb-6 border-t border-stone-100 pt-6">
            <div>
                 <div class="text-2xl font-bold text-stone-900">€ 106 <span class="text-sm font-normal text-stone-500">p.n.</span></div>
                 <div class="text-xs text-stone-500">Including breakfast</div>
            </div>
             <a href="/en/contact" class="ml-auto inline-block bg-green-800 text-white px-8 py-3 rounded-full font-bold hover:bg-green-900 shadow-md hover:shadow-lg transition">
                Book Now
            </a>
        </div>
      </div>
    </section>

    <!-- Kamer 2: Deluxe Driepersoonskamer -->
    <section class="flex flex-col md:flex-row-reverse gap-8 items-center bg-white p-6 rounded-xl shadow-sm border border-stone-100">
      <div class="md:w-1/2">
        <img src={roomImages.bijDeToren} alt="Deluxe Triple Room" class="w-full h-80 object-cover rounded-lg" />
      </div>
      <div class="md:w-1/2">
        <div class="flex items-center gap-3 mb-2">
            <h2 class="text-3xl font-serif font-bold text-green-900">Deluxe Triple Room</h2>
             <span class="bg-stone-100 text-stone-600 text-xs font-bold px-2 py-1 rounded border border-stone-200">Ground Floor</span>
        </div>
        <p class="text-stone-600 mb-6 leading-relaxed">
          Our largest suite of <strong>80 m²</strong> with extra atmosphere thanks to the <strong>fireplace</strong>.
          This room on the ground floor has a spacious seating area, private terrace and garden view.
        </p>
        <ul class="grid grid-cols-2 gap-y-2 gap-x-4 text-sm text-stone-700 mb-8">
             <li class="flex items-center font-bold">✓ 80 m² Space</li>
             <li class="flex items-center font-bold">✓ Fireplace</li>
             <li class="flex items-center">✓ Private terrace</li>
             <li class="flex items-center">✓ Garden view</li>
             <li class="flex items-center">✓ Seating area</li>
             <li class="flex items-center">✓ Flat-screen TV</li>
        </ul>
         <div class="flex items-center gap-6 mb-6 border-t border-stone-100 pt-6">
            <div>
                 <div class="text-2xl font-bold text-stone-900">€ 130 <span class="text-sm font-normal text-stone-500">p.n.</span></div>
                 <div class="text-xs text-stone-500">Suitable for 3 people</div>
            </div>
             <a href="/en/contact" class="ml-auto inline-block bg-white border-2 border-green-800 text-green-800 px-8 py-3 rounded-full font-bold hover:bg-green-50 transition">
                More Information
            </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
